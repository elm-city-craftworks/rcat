#!/usr/bin/env ruby

require "optparse"
require_relative "../lib/rcat"

begin
  RCat::Application.new(ARGV).run
rescue Errno::ENOENT => err
  STDERR.puts "rcat: #{err.message}"
  exit(1)
rescue OptionParser::InvalidOption => err
  STDERR.puts "rcat: #{err.message}"
  STDERR.puts "usage: rcat [-bns] [file ...]"
  exit(1)
end
